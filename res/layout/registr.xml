<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MyActivity" >

    <ImageView
        android:id="@+id/BackGroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" 
        android:scaleType="centerCrop"
        android:src="@drawable/background_black" />

    <TextView
        android:id="@+id/phn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Please enter you phone number:"
        android:textColor="#fdd700"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_rshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/b_states"
        android:gravity="center"
        android:text="SHARE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phn_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"
        android:background="@drawable/b_states"
        android:gravity="center"
        android:text="  Confirm  "
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_confirm"
        android:layout_alignBottom="@+id/btn_confirm"
        android:layout_alignLeft="@+id/btn_confirm"
        android:background="@drawable/b_states"
        android:gravity="center"
        android:text="  Continue  "
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="phone"
        android:textSize="24sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/cnf_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phn_message"
        android:layout_alignBottom="@+id/phn_message"
        android:layout_alignLeft="@+id/editTextphone"
        android:gravity="center"
        android:text="Please enter you confirmation code:"
        android:textColor="#fdd700"
        android:textSize="18sp" />

</RelativeLayout>
